{
  "name": "@folio/orders",
  "version": "1.4.0",
  "description": "Description for orders",
  "main": "src/index.js",
  "repository": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.9.4"
  },
  "stripes": {
    "type": "app",
    "displayName": "ui-orders.meta.title",
    "route": "/orders",
    "home": "/orders",
    "hasSettings": true,
    "okapiInterfaces": {
      "configuration": "2.0",
      "fund": "1.0",
      "inventory": "8.0",
      "locations": "3.0",
      "material-types": "2.2",
      "orders": "5.0",
      "users": "15.0",
      "organizations-storage.organizations": "1.0"
    },
    "queryResource": "query",
    "icons": [
      {
        "name": "app",
        "alt": "Create, view and manage orders",
        "title": "Orders"
      }
    ],
    "permissionSets": [
      {
        "permissionName": "module.orders.enabled",
        "displayName": "UI: Orders module is enabled",
        "visible": true
      },
      {
        "permissionName": "ui-orders.third-party-services",
        "displayName": "Orders: Permissions required to call services apart from mod-orders",
        "description": "",
        "subPermissions": [
          "fund.collection.get",
          "organizations-storage.organizations.collection.get",
          "users.collection.get",
          "inventory.items.collection.get",
          "inventory-storage.material-types.collection.get",
          "inventory-storage.locations.collection.get"
        ]
      },
      {
        "permissionName": "ui-orders.view",
        "displayName": "Orders: View orders and PO lines",
        "description": "",
        "visible": true,
        "subPermissions": [
          "ui-orders.third-party-services",
          "orders.collection.get",
          "orders.item.get",
          "orders.po-lines.collection.get",
          "orders.po-lines.item.get",
          "orders.receiving-history.collection.get"
        ]
      },
      {
        "permissionName": "ui-orders.all",
        "displayName": "Orders: all permissions for View and Edit orders and their lines",
        "description": "",
        "visible": true,
        "subPermissions": [
          "ui-orders.third-party-services",
          "orders.all"
        ]
      },
      {
        "permissionName": "settings.orders.enabled",
        "displayName": "Settings (Orders): Display list of settings for Orders",
        "visible": true,
        "subPermissions": [
          "settings.enabled"
        ]
      }
    ]
  },
  "scripts": {
    "start": "stripes serve",
    "build": "stripes build --output ./output",
    "test": "stripes test karma",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@bigtest/interactor": "^0.9.0",
    "@bigtest/mirage": "^0.0.1",
    "@bigtest/mocha": "^0.5.1",
    "@bigtest/react": "^0.1.2",
    "@folio/eslint-config-stripes": "^4.0.1",
    "@folio/react-intl-safe-html": "^1.0.1",
    "@folio/stripes": "^2.6.0",
    "@folio/stripes-cli": "^1.8.0",
    "@folio/stripes-components": "^5.0.2",
    "babel-eslint": "^9.0.0",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "eslint-plugin-filenames": "^1.3.2",
    "mocha": "^5.2.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-hot-loader": "^4.3.12",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "sinon": "^7.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "query-string": "^6.1.0",
    "react-intl": "^2.4.0",
    "react-router-dom": "^4.1.1",
    "react-router-prop-types": "^1.0.4",
    "redux-form": "^7.3.0"
  },
  "peerDependencies": {
    "@folio/stripes": "^2.6.0",
    "react": "*",
    "react-dom": "*",
    "react-redux": "*",
    "redux": "*"
  },
  "optionalDependencies": {
    "@folio/plugin-create-item": "^1.0.0",
    "@folio/plugin-find-instance": "^1.1.0",
    "@folio/plugin-find-user": "^1.1.0",
    "@folio/plugin-find-organization": "^1.1.0"
  }
}
